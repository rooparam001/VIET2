<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.Admin_Create_Time_Table">

   <android.support.design.widget.AppBarLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <include layout="@layout/toolbar_layout"
           />
   </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/time_table_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/branch_card"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark">

                    <Spinner
                        android:id="@+id/select_branch_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@color/white">

                    </Spinner>

                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/semester_card"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark">

                    <Spinner
                        android:id="@+id/select_sem_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@color/white">

                    </Spinner>

                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/day_card"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="45dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark">

                    <Spinner
                        android:id="@+id/day_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@color/white">

                    </Spinner>

                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/create"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="75dp"
                android:layout_marginVertical="10dp">

                    <Button
                        android:id="@+id/create_time_table"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Create Time Table"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:textSize="@dimen/button_text_size"
                        android:background="@drawable/button_view" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/show"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="75dp"
                android:layout_marginVertical="10dp">

                <Button
                    android:id="@+id/show_time_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Show Time Table"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/button_view"
                    android:textSize="@dimen/button_text_size" />

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>