<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:text="Create Time Table"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text_size" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="9dp"
            android:layout_marginVertical="20sp"
            android:layout_weight="1"
            android:background="@drawable/button_view"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/branch_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CSE"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/sem_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5th Sem"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"/>

            <TextView
                android:id="@+id/day_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Monday"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_view"
                android:gravity="center"
                android:text="Time"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"/>

            <Button
                android:id="@+id/from_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:text="From"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/to_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:text="To"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_view"
                android:gravity="center"
                android:text="Subject"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"/>


            <EditText
                android:id="@+id/edit_subject_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:background="@drawable/time_table_textview"
                android:hint="Subject Name"
                android:textColorHint="@color/lightblue"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_view"
                android:gravity="center"
                android:text="Teacher"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"/>

            <EditText
                android:id="@+id/edit_teacher_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:background="@drawable/time_table_textview"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:hint="Teacher Name"
                android:textColorHint="@color/lightblue"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="14dp"
                android:layout_weight="1"
                android:background="@drawable/button_view"
                android:gravity="center"
                android:text="Room No."
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/edit_room_no_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="14dp"
                android:layout_weight="1"
                android:background="@drawable/time_table_textview"
                android:gravity="center"
                android:hint="Room No."
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:inputType="phone"
                android:textColorHint="@color/lightblue"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit_time_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:background="@drawable/card_view_bg"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/button_text_size"
                style="?android:borderlessButtonStyle" />


            <Button
                android:id="@+id/dismiss_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_view"
                android:text="Dismiss"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
